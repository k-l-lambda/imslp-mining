{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": false,
		"pretty": false,
		"sourceMap": true,
		"baseUrl": "./",
		/* Module Resolution Options */
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"lib": ["ESNext"]
	}
}
